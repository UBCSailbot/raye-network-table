[Unit]
Description=sat_listener
After=suspend.target
After=hibernate.target
After=hybrid-sleep.target

[Service]
Restart=on-failure
RestartSec=3s
ExecStart=/home/debian/network-table/build/bin/bbb_satellite_listener 43200 3600 3600 /dev/ttyS2

[Install]
